<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>
		<Console name="stdout">
			<PatternLayout
				pattern="%-5level %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] (%F\:%M\:%L)%n        %msg%n" />
		</Console>
		<RollingFile name="rolling" fileName="/opt/digiverso/logs/indexer.log" filePattern="/opt/digiverso/logs/indexer.log%d{yyyy-MM-dd}..gz">
			<PatternLayout
				pattern="%-5level %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] (%F\:%M\:%L)%n        %msg%n" />
			<SizeBasedTriggeringPolicy size="20 MB" />
		</RollingFile>
	</Appenders>
	
	<Loggers>
		<Logger name="de.intranda" level="INFO" additivity="true" />
		<Logger name="de.intranda.digiverso.ocr" level="WARN" additivity="true" />
		<Logger name="org.apache" level="ERROR" additivity="true" />
		<Root level="info">
			<AppenderRef ref="stdout" />
			<AppenderRef ref="rolling" />
		</Root>
	</Loggers>

</Configuration>